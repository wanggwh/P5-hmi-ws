<DragonDrop>:
    ScrollView:
        do_scroll_x: True
        do_scroll_y: False
        bar_width: dp(8)
        scroll_type: ['bars', 'content']

        MDBoxLayout:
            id: scroll_container
            orientation: "horizontal"
            size_hint_x: None
            width: self.minimum_width   # <- expands horizontally as children are added
            height: self.minimum_height  # (optional if you want it to fit content)
            spacing: dp(10)
            padding: dp(10)
