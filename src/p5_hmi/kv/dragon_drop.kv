<DragonDropPage>:
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(20)
        md_bg_color: app.colors['bg_primary']
        
        Widget:

        FloatLayout:
            size_hint: None, None
            size: dp(220), dp(220)

            # Op
            Image:
                id: arrow_up
                source: "images/arrow.png"
                size_hint: None, None
                size: dp(80), dp(80)
                pos_hint: {"center_x": 0.5, "top": 1}
                allow_stretch: True
                keep_ratio: True
                on_touch_down:
                    root.change_arrow_image("up")
                    root.move_forward()
                canvas.before:
                    PushMatrix
                    Rotate:
                        angle: 0
                        origin: self.center
                canvas.after:
                    PopMatrix

            # Ned
            Image:
                id: arrow_down
                source: "images/arrow.png"
                size_hint: None, None
                size: dp(80), dp(80)
                pos_hint: {"center_x": 0.5, "y": 0}
                allow_stretch: True
                keep_ratio: True
                on_touch_down:
                    root.change_arrow_image("down")
                    root.move_backward()
                canvas.before:
                    PushMatrix
                    Rotate:
                        angle: 180
                        origin: self.center
                canvas.after:
                    PopMatrix

            # Venstre
            Image:
                id: arrow_left
                source: "images/arrow.png"
                size_hint: None, None
                size: dp(80), dp(80)
                pos_hint: {"x": 0, "center_y": 0.5}
                allow_stretch: True
                keep_ratio: True
                on_touch_down:
                    root.change_arrow_image("left")
                    root.move_left()
                canvas.before:
                    PushMatrix
                    Rotate:
                        angle: 90
                        origin: self.center
                canvas.after:
                    PopMatrix

            # HÃ¸jre
            Image:
                id: arrow_right
                source: "images/arrow.png"
                size_hint: None, None
                size: dp(80), dp(80)
                pos_hint: {"right": 1, "center_y": 0.5}
                allow_stretch: True
                keep_ratio: True
                on_touch_down:
                    root.change_arrow_image("right")
                    root.move_right()
                canvas.before:
                    PushMatrix
                    Rotate:
                        angle: -90
                        origin: self.center
                canvas.after:
                    PopMatrix