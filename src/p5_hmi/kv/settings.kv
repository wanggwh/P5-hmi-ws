<SettingsPage>:
    orientation: "vertical"
    padding: 0, dp(20), 0, 0  # Only left padding, no top padding
    spacing: dp(20)

    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"
        size_hint_y: None
        padding: 0
        MDBoxLayout:
            orientation: "horizontal"
            size_hint: None, None
            size: self.minimum_size
            spacing: dp(10)
            padding: 0
            MDRaisedButton:
                text: "Dark"
                md_bg_color: app.theme_cls.primary_color if app.theme_cls.theme_style == "Dark" else app.theme_cls.bg_normal
                text_color: app.theme_cls.text_color
                on_release: root.set_dark_mode()
            MDRaisedButton:
                text: "Light"
                md_bg_color: app.theme_cls.primary_color if app.theme_cls.theme_style == "Light" else app.theme_cls.bg_normal
                text_color: app.theme_cls.text_color
                on_release: root.set_light_mode()

    MDBoxLayout:
        orientation: "horizontal"
        size_hint: None, None
        size: dp(400), dp(60)
        pos_hint: {"center_x": 0.5}

        MDRaisedButton:
            text: "ERROR SNACKBAR TEST MSG"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: root.show_test_error_snackbar()
