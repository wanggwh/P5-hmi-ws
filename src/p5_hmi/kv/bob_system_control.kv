    MDBoxLayout:
        orientation: "horizontal"
        size_hint: None, None
        size: dp(620), dp(50)  # 2 x 300 + spacing
        spacing: dp(20)
        pos_hint: {'center_x': 0.5, 'y': 0.05}

        MDRaisedButton:
            text: "HOME BOTH ROBOTS"
            md_bg_color: app.colors['success']
            size_hint: None, None
            size: dp(300), dp(50)
            on_release: root.move_to_home()

