    MDLabel:
        text: "ALICE - Custom Configuration Name"
        font_style: "Body1"
        theme_text_color: "Custom"
        text_color: app.colors['text_light']
        halign: "center"
        size_hint: None, None
        size: dp(400), dp(30)
        pos_hint: {'center_x': 0.5, 'center_y': 0.50}

    MDTextField:
        id: configuration_name_field
        size_hint_x: None
        mode: "round"
        width: "300dp"
        hint_text: "Type here"
        password: False
        icon_left: "robot-industrial-outline"
        pos_hint: {"center_x": 0.40, "center_y": 0.40}
        theme_line_color: "Custom"
        line_color_normal: (0.3, 0.7, 1.0, 1)
        line_color_focus: (0.1, 0.5, 1.0, 1)
        theme_text_color: "Custom"
        text_color_normal: (0, 0, 0, 1)
        text_color_focus: (0, 0, 0, 1) 
        theme_hint_text_color: "Custom"
        hint_text_color: (0.7, 0.7, 0.7, 1)
  
    MDRaisedButton:
        text: "SAVE"
        md_bg_color: app.colors['button_neutral']
        size_hint: None, None
        size: dp(300), dp(50)
        pos_hint: {"center_x": 0.65, "center_y": 0.40}
        on_release: root.save_configuration()

    
    MDBoxLayout:
        orientation: "vertical"
        size_hint: None, None
        size: dp(750), dp(40)  
        spacing: dp(35)
        padding: dp(40)
        pos_hint: {'center_x': 0.5}

        # Default configurations row
        MDBoxLayout:
            orientation: "horizontal"
            size_hint: None, None
            size: dp(700), dp(10)
            spacing: dp(10)

            MDLabel:
                text: "Default configurations:"
                font_style: "Body1"
                theme_text_color: "Custom"
                text_color: app.colors['text_light']
                halign: "left"
                size_hint: None, None
                size: dp(180), dp(30)

            MDRaisedButton:
                text: "HOME"
                md_bg_color: app.colors['button_neutral']
                size_hint: None, None
                size: dp(120), dp(50)
                on_release: root.move_to_home()

            MDRaisedButton:
                text: "UPRIGHT"
                md_bg_color: app.colors['button_neutral']
                size_hint: None, None
                size: dp(120), dp(50)
                on_release: root.move_to_upright() 

        MDBoxLayout:
            orientation: "horizontal"
            size_hint: None, None
            size: dp(700), dp(10)
            spacing: dp(10)            

            MDLabel:
                text: "Custom configurations:"
                font_style: "Body1"
                theme_text_color: "Custom"
                text_color: app.colors['text_light']
                halign: "left"
                size_hint: None, None
                size: dp(180), dp(30)

            ScrollView:
                size_hint: None, None
                size: dp(500), dp(60)  # Fast bredde og højde for scroll area
                do_scroll_x: True      # Tillad horizontal scroll
                do_scroll_y: False     # Ingen vertikal scroll
                bar_width: dp(10)      # Bredde af scrollbar
                scroll_type: ['bars']  # Vis scrollbars

                MDBoxLayout:
                    id: custom_config_container
                    orientation: "horizontal"
                    spacing: dp(5)
                    size_hint_x: None
                    width: self.minimum_width
                    height: dp(50)     # Fast højde for knapperne


 