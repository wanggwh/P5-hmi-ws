<StartPage>:
    orientation: "vertical"
    padding: dp(20)
    spacing: dp(20)
    
    # Button size variables
    button_width: dp(300)
    button_height: dp(120)
    button_font_size: "30sp"
    
    # Horizontal layout for buttons (centered)
    MDBoxLayout:
        orientation: "horizontal"
        spacing: dp(20)
        size_hint_y: None
        height: root.button_height + dp(20)  # button height + padding
        adaptive_width: True
        pos_hint: {'center_x': 0.5}

        # Start System Button
        MDRaisedButton:
            id: start_btn
            text: "START"
            md_bg_color: app.colors['success']
            theme_text_color: "Custom"
            text_color: app.colors['text_light']
            #text_color: app.colors['text_muted']
            font_size: root.button_font_size
            size_hint_x: None
            width: root.button_width
            height: root.button_height
            elevation: 3
            on_release: app.system_button_callback("start")
        
        # Pause System Button (center)
        MDRaisedButton:
            text: "PAUSE"
            md_bg_color: app.colors['accent_orange']
            theme_text_color: "Custom"
            text_color: app.colors['text_light']
            #text_color: app.colors['text_muted']
            font_size: root.button_font_size
            size_hint_x: None
            width: root.button_width
            height: root.button_height
            elevation: 3
            on_release: app.system_button_callback("pause")
            
        # Stop System Button
        MDRaisedButton:
            text: "STOP"
            md_bg_color: app.colors['accent_coral']
            theme_text_color: "Custom"
            text_color: app.colors['text_light']
            #text_color: app.colors['text_muted']
            font_size: root.button_font_size
            size_hint_x: None
            width: root.button_width
            height: root.button_height
            elevation: 3
            on_release: app.system_button_callback("stop")
    
        # Browse button
        MDRaisedButton:
            id: browse_btn
            text: "BROWSE"
            md_bg_color: app.colors['browse_btn']
            theme_text_color: "Custom"
            text_color: app.colors['text_light']
            #text_color: app.colors['text_muted']
            font_size: root.button_font_size
            size_hint_x: None
            width: root.button_width
            height: root.button_height
            elevation: 3
            on_release: root._open_saved_configs_browser()

    # System Status Card        
    MDCard:
        orientation: "vertical"
        padding: dp(16)
        spacing: dp(12)
        md_bg_color: app.colors['bg_secondary']
        elevation: 4
        radius: [15, 15, 15, 15]
        size_hint_y: None
        height: dp(300)
        
        # Header with title and clear button
        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: dp(40)
            spacing: dp(10)
            
            MDLabel:
                text: "Recent System Logging:"
                font_style: "H6"
                theme_text_color: "Custom"
                text_color: app.colors['text_light']
                halign: "left"
                
            MDBoxLayout:
                orientation: "horizontal"
                size_hint_x: None
                width: dp(100)
                height: dp(35)
                md_bg_color: app.colors['button_neutral']
                radius: [5, 5, 5, 5]
                spacing: dp(5)
                padding: [dp(8), dp(5)]
                pos_hint: {'center_y': 0.5}
                
                MDIconButton:
                    icon: "delete-sweep"
                    theme_icon_color: "Custom"
                    icon_color: app.colors['text_light']
                    size_hint: None, None
                    size: dp(25), dp(25)
                    pos_hint: {'center_y': 0.5}
                    on_release: root.clear_error_messages()
                    
                MDLabel:
                    text: "Clear"
                    font_size: "14sp"
                    theme_text_color: "Custom"
                    text_color: app.colors['text_light']
                    size_hint_x: None
                    width: dp(40)
                    halign: "left"
                    valign: "center"
            
        # Error logging section (flyttet op under Recent Errors label)
        MDScrollView:
            id: error_scroll
            size_hint_y: None
            height: dp(220)  # Increased height for more error messages
            
            MDList:
                id: error_list
                # Error messages vil blive tilf√∏jet her dynamisk